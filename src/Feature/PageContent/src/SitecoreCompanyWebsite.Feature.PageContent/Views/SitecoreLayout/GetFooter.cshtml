@model SitecoreCompanyWebsite.Feature.PageContent.Models.Layout_Templates.IFooter
@using Glass.Mapper.Sc.Web.Mvc

@{
    string mailTo = "mailto:" + @Html.Glass().Editable(Model, x => x.Email);
    string domainHref = "http://" + @Html.Glass().Editable(Model, x => x.Website);
}

<section id="bottom" class="main">
    <!--Container-->
    <div class="container">
        <!--row-fluids-->
        <div class="row-fluid">
            <!--Contact Info-->
            <div class="span3">
                <h4>CONTACT US</h4>
                <ul class="unstyled address">
                    <li>
                        <i class="icon-home"></i><strong>Address:</strong>@Html.Glass().Editable(Model, x => x.Adress)
                    </li>
                    <li>
                        <i class="icon-envelope"></i>
                        <strong>Email: </strong> <a href=@mailTo>@Html.Glass().Editable(Model, x => x.Email)</a>
                    </li>
                    <li>
                        <i class="icon-globe"></i>
                        <strong>Website:</strong> <a href=@domainHref>@Html.Glass().Editable(Model, x => x.Website)</a>
                    </li>
                    <li>
                        <i class="icon-phone"></i>
                        <strong>Telephone:</strong>@Html.Glass().Editable(Model, x => x.Telephone)
                    </li>
                </ul>
            </div>
            <!--End Contact Info-->
            <!--Important Links-->
            <div id="tweets" class="span3">
                <h4>COMPANY NAME</h4>
                <div>
                    <ul class="arrow">
                        @foreach (var item in Model.Lists.Pages)
                        {
                            <li><a href=@Html.Glass().Editable(item, x => x.Url)>@Html.Glass().Editable(item, x => x.Name)</a></li>
                        }
                    </ul>
                </div>
            </div>
            <!--Important Links-->
            <div id="archives" class="span2">
                <h4>ARCHIVES</h4>
                <div>
                    <ul class="arrow">
                        @foreach (var item in Model.Lists.Links)
                        {
                        <li><a href=@Html.Glass().Editable(item, x => x.Url)>@Html.Glass().Editable(item, x => x.Name)</a></li>
                        }
                    </ul>
                </div>
            </div>
            <!--End Links-->
            <div class="span4">
                <h4>FACEBOOK</h4>
                <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Ffacebook&tabs=timeline&width=340&height=130&small_header=true&adapt_container_width=true&hide_cover=false&show_facepile=false&appId" width="340" height="130" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
            </div>
        </div>
        <!--/row-fluid-->
    </div>
    <!--/container-->
</section>

<!--Footer-->
<footer id="footer">
    <div class="container">
        <div class="row-fluid">
            <div class="span5 cp">
                &copy; @Html.Glass().Editable(Model, x => x.Year) <a target="_blank" href="@Html.Glass().Editable(Model, x => x.CompanyLink)">@Html.Glass().Editable(x => x.Company)</a>. All Rights Reserved..
            </div>
            <div class="span6">
                <ul class="social pull-right">
                    <li><a href="https://www.facebook.com"><i class="icon-facebook"></i></a></li>
                    <li><a href="https://twitter.com/?lang=en"><i class="icon-twitter"></i></a></li>
                    <li><a href="https://ro.pinterest.com"><i class="icon-pinterest"></i></a></li>
                    <li><a href="https://www.linkedin.com"><i class="icon-linkedin"></i></a></li>
                    <li><a href="http://www.google.com"><i class="icon-google-plus"></i></a></li>
                    <li><a href="https://www.youtube.com"><i class="icon-youtube"></i></a></li>
                    <li><a href="https://www.instagram.com"><i class="icon-instagram"></i></a></li>
                </ul>
            </div>
            <div class="span1">
                <a id="gototop" class="gototop pull-right" href="#"><i class="icon-angle-up"></i></a>
            </div>
        </div>
    </div>
</footer>
